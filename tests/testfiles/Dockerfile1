FROM alpine:3.12 AS base
COPY /app /app

FROM node:12.10-alpine3.22 AS build
RUN apk install \
        python \
        make \
        g++
COPY --from=base /app /app
RUN npm install

FROM node:12.10.0-alpine AS release
COPY /app /app

FROM python:3.7.3-alpine3.10

FROM nginx:1.25.5-alpine3.19

FROM guacamole/guacamole:1.4.0

FROM mcr.microsoft.com/dotnet/aspnet:9.0.0 AS Final

FROM Final as FinalFinal

FROM clamav/clamav:1.5.1-11_base
