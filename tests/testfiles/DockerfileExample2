FROM alpine:3.22 AS base
COPY /app /app



FROM node:8.0-alpine AS build
RUN apk install \
        python \
        make \
        g++
COPY --from=base /app /app
RUN npm install

FROM node:24.10-alpine3.22 AS release
COPY /app /app

FROM python:3.14.0-alpine3.22

FROM nginx:1.29.2-alpine3.22

FROM guacamole/guacamole:1.6.0

FROM mcr.microsoft.com/dotnet/aspnet:9.0.9 AS Final
